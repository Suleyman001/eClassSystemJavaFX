<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>

<VBox
        alignment="CENTER"
        spacing="15"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.example.eclasssystem.controller.MainViewController"
        xmlns="http://javafx.com/javafx"
        style="
        -fx-background-color: #f0f0f0;
        -fx-padding: 20px;
    ">

  <Label
          text="EClass System"
          style="
            -fx-font-size: 24px;
            -fx-font-weight: bold;
            -fx-text-fill: #333333;
            -fx-margin-bottom: 20px;
        "/>

  <VBox spacing="10" alignment="CENTER">
    <Button
            text="👨‍🎓 Students"
            onAction="#openStudentsView"
            style="
                -fx-font-size: 14px;
                -fx-padding: 10px;
                -fx-background-color: #4CAF50;
                -fx-text-fill: white;
                -fx-background-radius: 5px;
                -fx-max-width: 250px;
            "
            onMouseEntered="#handleMouseEnter"
            onMouseExited="#handleMouseExit"/>

    <Button
            text="📚 Subjects"
            onAction="#openSubjectsView"
            style="
                -fx-font-size: 14px;
                -fx-padding: 10px;
                -fx-background-color: #4CAF50;
                -fx-text-fill: white;
                -fx-background-radius: 5px;
                -fx-max-width: 250px;
            "
            onMouseEntered="#handleMouseEnter"
            onMouseExited="#handleMouseExit"/>

    <Button
            text="📝 Marks"
            onAction="#openMarksView"
            style="
                -fx-font-size: 14px;
                -fx-padding: 10px;
                -fx-background-color: #4CAF50;
                -fx-text-fill: white;
                -fx-background-radius: 5px;
                -fx-max-width: 250px;
            "
            onMouseEntered="#handleMouseEnter"
            onMouseExited="#handleMouseExit"/>
  </VBox>

  <Separator style="-fx-background-color: #d0d0d0;"/>

  <Button
          text="📊 Statistics"
          onAction="#openStatisticsView"
          style="
            -fx-font-size: 14px;
            -fx-padding: 10px;
            -fx-background-color: #4CAF50;
            -fx-text-fill: white;
            -fx-background-radius: 5px;
            -fx-max-width: 250px;
        "
          onMouseEntered="#handleMouseEnter"
          onMouseExited="#handleMouseExit"/>

  <Separator style="-fx-background-color: #d0d0d0;"/>

  <Button
          text="🔀 Parallel Demo"
          onAction="#openParallelView"
          style="
            -fx-font-size: 14px;
            -fx-padding: 10px;
            -fx-background-color: #4CAF50;
            -fx-text-fill: white;
            -fx-background-radius: 5px;
            -fx-max-width: 250px;
        "
          onMouseEntered="#handleMouseEnter"
          onMouseExited="#handleMouseExit"/>

  <Separator style="-fx-background-color: #d0d0d0;"/>

  <Button
          text="💱 MNB Exchange Rates"
          onAction="#openSoapClientView"
          style="
            -fx-font-size: 14px;
            -fx-padding: 10px;
            -fx-background-color: #4CAF50;
            -fx-text-fill: white;
            -fx-background-radius: 5px;
            -fx-max-width: 250px;
        "
          onMouseEntered="#handleMouseEnter"
          onMouseExited="#handleMouseExit"/>

</VBox>