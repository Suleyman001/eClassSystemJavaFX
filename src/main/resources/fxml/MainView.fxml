<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.eclasssystem.controller.MainViewController"
      stylesheets="@../css/styles.css" styleClass="vbox">

  <Label text="EClass System" styleClass="label"/>

  <Button text="👨‍🎓 Students" onAction="#openStudentsView" styleClass="button"/>
  <Button text="📚 Subjects" onAction="#openSubjectsView" styleClass="button"/>
  <Button text="📝 Marks" onAction="#openMarksView" styleClass="button"/>

  <HBox styleClass="separator"/>

  <Button text="📊 Statistics" onAction="#openStatisticsView" styleClass="button"/>

  <HBox styleClass="separator"/>

  <Button text="🔀 Parallel Demo" onAction="#openParallelView" styleClass="button"/>

  <HBox styleClass="separator"/>

  <Button text="💱 MNB Exchange Rates" onAction="#openSoapClientView" styleClass="button"/>

</VBox>